<?xml version="1.0"?>
<massive-search-mapping xmlns="http://massiveart.com/schema/dic/massive-search-mapping">
<mapping class="Manuxi\SuluNewsBundle\Entity\Abbreviation">
    <index value="abbreviation"/>
    <id property="id"/>
    <title property="name"/>
    <description property="explanation"/>
    <url expr="object.getRoutePath()" />
    <locale property="locale"/>
    <fields>
        <field name="name" expr="object.getName()" type="string"/>
        <field name="explanation" expr="object.getExplanation()" type="string"/>
        <field name="description" expr="object.getDescription()" type="string"/>
    </fields>
</mapping>
</massive-search-mapping>