<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>abbreviation_details</key>

    <properties>
        <section name="mandatory">
            <meta>
                <title>sulu_abbreviations.header.content</title>
            </meta>
            <properties>
                <property name="name" type="text_line" mandatory="true">
                    <meta>
                        <title>sulu_abbreviations.name</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>
                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="routePath" type="route" mandatory="true">
                    <meta>
                        <title>sulu_admin.url</title>
                    </meta>
                    <!--https://github.com/sulu/sulu/pull/5933-->
                    <params>
                        <param name="mode" value="leaf"/>
                    </params>
                </property>

                <property name="explanation" type="text_area" mandatory="true">
                    <meta>
                        <title>sulu_abbreviations.explanation</title>
                    </meta>
                </property>
            </properties>
        </section>
        <section name="optional">
            <meta>
                <title>sulu_abbreviations.header.optional</title>
            </meta>
            <properties>

                <property name="description" type="text_editor">
                    <meta>
                        <title>sulu_abbreviations.description</title>
                    </meta>
                </property>

                <property name="image" type="single_media_selection" colspan="6">
                    <meta>
                        <title>sulu_abbreviations.mainimage</title>
                    </meta>
                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>

                <property name="link" type="link" colspan="6">
                    <meta>
                        <title>sulu_abbreviations.link</title>
                    </meta>

                    <params>
                        <param name="enable_anchor" value="true"/>
                        <param name="enable_attributes" value="true"/>
                    </params>
                </property>

            </properties>
        </section>
    </properties>
</form>
